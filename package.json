{
  "name": "openapi-typescript-server-monorepo",
  "version": "0.0.15",
  "private": true,
  "author": "jasonblanchard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonblanchard/openapi-typescript-server.git"
  },
  "type": "module",
  "scripts": {
    "test": "pnpm -r --filter \"./packages/*\" --filter \"./examples/*\" test",
    "typecheck": "tsc --noEmit",
    "gen:examples": "pnpm -r --filter \"./examples/*\" gen",
    "build:packages": "pnpm -r --filter \"./packages/*\" build",
    "pack": "pnpm run build:packages && pnpm -r --filter \"./packages/*\" pack --pack-destination /tmp",
    "format:check": "pnpm exec prettier . --check",
    "format": "pnpm exec prettier . --write",
    "propagate:readme": "cp README.md packages/openapi-typescript-server/README.md"
  },
  "engines": {
    "node": ">=23.6.0"
  },
  "workspaces": [
    "packages/openapi-typescript-server-runtime",
    "packages/openapi-typescript-server",
    "packages/openapi-typescript-server-express",
    "examples/*"
  ],
  "devDependencies": {
    "@types/node": "^25.0.3",
    "prettier": "3.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "supports-color": "^10.2.2"
  }
}
